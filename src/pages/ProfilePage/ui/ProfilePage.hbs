{{#if userData}}
<div class="profile-page">
    <div class="profile">
        <div class="author-area">
            <div class="author-area__box-1">
                <div class="user-profile__header white bold">
                    {{header}}
                </div>
                <div class="box-1__menu">
                    <div id="tabBar" class="tab-bar-placeholder"></div>
                    {{#if own}}
                        {{#unless mobile}}
                            <button class="author__subscriptions-button" id="subscriptions-button">
                                <img src="/public/icons/followers.svg" alt="subscriptions">
                                <span>Подписки</span>
                            </button>
                        {{/unless}}
                    {{/if}}
                    <div class="create-board{{#unless showCreateBoardButton}} hidden{{/unless}}">
                        <img src="/public/icons/new-pin.svg" alt="create new board">
                        <div class="label">
                            создать доску
                        </div>
                    </div>
                </div>
            </div>
            <div class="author-area__box-2">
                <div class="author">
                    {{#if userData.avatar}}
                    <img src="{{userData.avatar}}" alt="Profile Picture" class="author__profile-picture">
                    {{else}}
                    <div class="author__profile-picture">
                        <p>{{userData.public_name.[0]}}</p>
                    </div>
                    {{/if}}
                    <div class="author__info">
                        <h1 class="author__name">{{userData.public_name}}</h1>
                        <div class="author__followers">{{userData.followersCount}} подписчиков</div>
                    </div>
                    {{#unless own}}
                        {{#unless mobile}}
                            <button class="author__chat-button">
                                <img src="/public/icons/chat.svg" alt="Chat">
                            </button>
                            <button class="author__subscribe-button" id="subscribe-{{safeUsername}}">
                                {{#if isSubscribed}}
                                    <span>Отписаться</span>
                                {{else}}
                                    <span>Подписаться</span>
                                {{/if}}
                            </button>
                        {{/unless}}
                    {{/unless}}
                </div>
            </div>
            {{#if mobile}}
                <div class="author-area__box-3">
                    {{#if own}}
                        <button class="author__subscriptions-button" id="subscriptions-button">
                            <img src="/public/icons/followers.svg" alt="subscriptions">
                            <span>Подписки</span>
                        </button>
                    {{else}}
                        <button class="author__chat-button">
                            <img src="/public/icons/chat.svg" alt="Chat">
                        </button>
                        <button class="author__subscribe-button" id="subscribe-{{safeUsername}}">
                            {{#if isSubscribed}}
                                <span>Отписаться</span>
                            {{else}}
                                <span>Подписаться</span>
                            {{/if}}
                        </button>
                    {{/if}}
                </div>
            {{/if}}
        </div>
        <div id="feed" class="profile__feed">
        </div>
    </div>
</div>
{{/if}}