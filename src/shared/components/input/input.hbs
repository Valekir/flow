<div class="input-container">
    <label for="{{id}}">
        {{inputLabel}}
        {{#if isStarred}}<span class="required">*</span>{{/if}}
    </label>

    <div class="input">
        <input type="{{type}}" class="input__field" id="{{id}}" >
        {{#if isPassword}}
            <img src="icons/eye-off.svg" class="input__toggle-password" alt="Показать пароль" data-password-toggle>
        {{/if}}
        <img src="icons/error.svg" class="input__error hidden" aria-hidden="true" alt="" id="{{id}}-error-icon">
    </div>

    <p class="error-message error-label hidden" id="{{id}}-error">
        {{errorMessage}}
    </p>
</div>