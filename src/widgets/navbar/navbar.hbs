<div class="navbar">
    <img
            src="/icons/logo-small.svg"
            class="navbar-logo"
            alt="site logo"
            aria-label="Main logo"
    />

    <input
            type="text"
            class="search-form"
            placeholder="Поиск..."
            id="search"
            aria-label="Search input"
    />

    {{#if authorized}}
    <div class="profile-picture">
        <img
                {{#if avatar}}
                    src={{avatar}}
                {{else}}
                    scr="/img/pfp-placeholder"
                {{/if}}
                alt="profile picture"
                aria-label="User profile"
        >
    </div>
    {{else}}
    <button
        class="feed-redirect"
        id="redirect"
    >
        Войти
    </button>
    {{/if}}
</div>