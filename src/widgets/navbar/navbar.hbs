<div class="navbar">
    <img
            src="/icons/logo-small.svg"
            class="navbar-logo"
            alt="site logo"
            aria-label="Main logo"
    />

    <input
            type="text"
            class="search-form"
            placeholder="Поиск..."
            id="search"
            aria-label="Search input"
    />

    {{#if authorized}}
    <div class="profile-picture">
        {{#if avatar}}
            <img
                    src={{avatar}}
                    alt="profile picture"
                    aria-label="User profile"
            >
        {{else}}
            <p class="shortUsername">{{shortUsername}}</p>
        {{/if}}
    </div>
    {{else}}
    <button
        class="feed-redirect"
        id="redirect"
    >
        Войти
    </button>
    {{/if}}
</div>